{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "outDir": "./build"
  },
  "include": ["src/**/*"],
  "exclude": ["**/dist", "node_modules", "**/node_modules"]
}
