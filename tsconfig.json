{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2019"],
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "./test/**/*"],
  "exclude": ["**/dist", "node_modules", "**/node_modules"]
}
