{
  "name": "design-tokens-parser",
  "version": "0.0.1",
  "description": "Design tokens are design decisions, represented as data, that ensure systematically unified and cohesive product experiences.",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "tsc --noEmit && eslint '*/**/*.ts' --quiet --fix",
    "publish": "npm run build && npm publish"
  },
  "author": "Jose Cabrera <joselu11cabrera@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "26.0.5",
    "@types/node": "14.0.23",
    "@typescript-eslint/eslint-plugin": "3.6.1",
    "@typescript-eslint/parser": "3.6.1",
    "comment-parser": "^0.7.5",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "gonzales-pe": "4.3.0",
    "husky": "^4.2.5",
    "jest": "26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.5",
    "ts-jest": "26.1.3",
    "typescript": "3.9.7"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
